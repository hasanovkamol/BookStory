@model IEnumerable<BookStory.Moduls.BooksModul>
@{
    ViewData["Title"] = "GetAllBook";
  
}
<div class="container">
    <h3 class="display-4 ">All books</h3>
    <div class="row">
       
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <svg class="bd-placeholder-img card-img-top ">   <img src="~/image/admin-icon.png" /></svg>
                        <h3 class="card-title"> @item.title</h3>
                        <p class="card-text">@item.Descreption</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a class="btn btn-sm btn-outline-secondary" asp-controller="book" asp-Action="GetBook" asp-route-Id="@item.Id" asp-route-title="@item.title" >View Details</a>
                            </div>
                            <small class=" text-muted">Author name: @item.Author</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
